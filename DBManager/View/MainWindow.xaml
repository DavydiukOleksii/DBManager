<Window x:Class="DBManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memes DB mamager"
        Width="800"
        Height="500">



    <Grid Name="mainGrid"
          Margin="15"
          RenderTransformOrigin="0.3,0.7">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Label Name="HeroNames" Grid.Column="0">
            Hero name:
        </Label>

        <ListBox Name="HeroList"
                 Grid.Column="0"
                 Margin="0,28,0,80"
                 ItemsSource="{Binding Heroes,
                                       Mode=OneWay,
                                       UpdateSourceTrigger=PropertyChanged}"
                 SelectedItem="{Binding SelectedHeroes,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Column="0"
                Height="30"
                Margin="5"
                VerticalAlignment="Bottom"
                Command="{Binding DeleteHero}">
            Delete Hero
        </Button>
        <Button Grid.Column="0"
                Height="30"
                Margin=" 5 45"
                VerticalAlignment="Bottom"
                Command="{Binding AddNewHero}">
            Add new Hero
        </Button>

