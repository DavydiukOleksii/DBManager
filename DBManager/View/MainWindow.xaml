                      Grid.Column="1"
                      Margin="10"
                      CanContentScroll="True"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Name="HeroesInfo"
                        DataContext="{Binding SelectedHeroes,
                                              Mode=TwoWay,
                                              UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding}">

                <Grid Name="statsGrid"
                      Height="280"
                      Margin="15,15,10,15"
                      Background="BlanchedAlmond">
