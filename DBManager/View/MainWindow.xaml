                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="60px" />
                        <ColumnDefinition Width="60px" />
                    </Grid.ColumnDefinitions>

                    <Image Grid.Row="0"
                           Grid.RowSpan="3"
                           Grid.Column="0"
                           Margin="5"
                           Source="{Binding ImagePath,
                                            UpdateSourceTrigger=PropertyChanged,
                                            Mode=TwoWay}"
                           Stretch="Uniform" />

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Margin="15 10"
                             VerticalAlignment="Bottom"
                             FontWeight="Bold"
                             Text="{Binding Name}" />

                    <Grid Grid.Row="0" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Height="25"
                                Margin="10"
                                VerticalAlignment="Bottom"
                                Command="{Binding DataContext.SaveHero,
                                                  RelativeSource={RelativeSource FindAncestor,
                                                                                 AncestorType={x:Type Window}}}">
                            Save
                        </Button>
                        <Button Grid.Column="1"
                                Height="25"
                                Margin="10"
                                VerticalAlignment="Bottom"
                                Command="{Binding DataContext.ClearHero,
                                                  RelativeSource={RelativeSource FindAncestor,
                                                                                 AncestorType={x:Type Window}}}">
                            Clear
                        </Button>

                    </Grid>

                    <Image Grid.Row="0"
                           Grid.Column="3"
                           Margin="5"
                           HorizontalAlignment="Right"
                           Source="../Resources/attack.png"
                           Stretch="Uniform" />

                    <TextBox Grid.Row="0"
                             Grid.Column="4"
                             Width="35"
                             Margin="15"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Text="{Binding Stats.Attack}"
                             TextAlignment="Right"
                             TextWrapping="NoWrap" />

                    <TextBlock Grid.Row="1"
                               Grid.RowSpan="3"
                               Grid.Column="1"
                               Grid.ColumnSpan="2"
                               Margin="5"
                               Text="Descriptions:" />

                    <TextBox Grid.Row="1"
                             Grid.RowSpan="3"
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Margin="20 25"
                             AcceptsReturn="True"
